<div class="chat-header">
  <div class="header-left">
    <div class="header-title">hogefuga</div>
  </div>
  <div class="header-right">
    <div class="header-button">
      <a href="#">チャットを終了する</a>
    </div>
  </div>
</div>

<div class="messages">
  <div class="message">
    <div class="message-top">
      <div class="user-name">Tom</div>
      <div class="data">2020/3/31(Wed) 12:43:30</div>
    </div>
    <div class="message-bottom">
      <div class="message-text">おはよう</div>
    </div>
  </div>
</div>

<%= form_with model: [@room, @message], html: {class: "form"}, local: true do |f|%>
  <div class="message-form">
    <%= f.text_field :content, class: 'text-form', placeholder: 'type a message' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'send-button' %>
<% end %>